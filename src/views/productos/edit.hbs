<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/productos/edit/{{producto.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{producto.nombre}}" name="nombre" class="form-control" placeholder="nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="numeric" value="{{producto.precio}}" name="precio" class="form-control" placeholder="precio">
                        </div>
                        <div class="form-group">
                            <textarea name="stock" rows="2" class="form-control" placeholder="stock">{{producto.stock}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>